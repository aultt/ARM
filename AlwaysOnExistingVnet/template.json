{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "namePrefix": {
            "type": "string",
            "minLength": 3,
            "maxLength": 9,
            "metadata": {
              "description": "Naming prefix for each new resource created. 3-char min, 9-char max, lowercase alphanumeric"
            }
        },
        "virtualMachineSize": {
            "type": "string"
        },
        "existingVirtualNetworkRGName":{
            "type": "string"
        },
        "existingVirtualNetworkName":{
            "type": "string"
        },
        "existingSubnetName":{
            "type": "string"
        },
        "adminUsername": {
            "type": "string"
        },
        "virtualNetworkName": {
            "type": "string"
        },
        "domainName": {
            "type": "string"
        },
        "domainUserName":{
            "type":"string"
        },
        "domainUserPassword": {
            "type": "securestring"
        },
        "sqlUserName":{
            "type":"string"
        },
        "sqlUserPassword": {
            "type": "securestring"
        },
        "networkSecurityGroupName":{
            "type": "string"
        },
        "adminPassword": {
            "type": "securestring"
        },
        "availabilitySetName": {
            "type": "string"
        },
        "ClusterStaticIP": {
            "type": "string"
        },
        "ClusterStaticIPSubnetClass":{
            "type": "string"
        },
        "availabilityGroupName":{
            "type": "string"
        },
        "listenerStaticIP":{
            "type": "string"
        },
        "vmcount": {
            "type": "int",
            "minValue": 2,
            "maxValue": 8,
            "metadata": {
                "description": "Number of VMs to be created in cluster (Min=2, Max=8)"
            }
        },
        "diagnosticsStorageAccountName": {
            "type": "string"
        },
        "diagnosticsStorageAccountId": {
            "type": "string"
        },
        "sqlAuthenticationLogin": {
            "type": "string"
        },
        "sqlAuthenticationPassword": {
            "type": "securestring"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
              "description": "Location of resources that the script is dependent on such as linked templates and DSC modules"
            },
            "defaultValue": "https://raw.githubusercontent.com/aultt/ARM/dev/AlwaysOnExistingVnet" 
          },
          "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
              "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
          }
    },
    "variables": {
        "vnetID": "[resourceID(parameters('existingVirtualNetworkRGName'),'Microsoft.Network/virtualNetworks',parameters('existingVirtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('existingSubnetName'))]",
        "diagnosticsExtensionName": "Microsoft.Insights.VMDiagnosticsSettings",
        "vmNamePrefix": "[concat(parameters('namePrefix'),'-')]",
        "ilbname": "[concat(parameters('namePrefix'),'-ilb')]",
        "ilbID": "[resourceID('Microsoft.Network/loadBalancers',variables('ilbName'))]",
        "ilbFE" :"[concat(parameters('namePrefix'),'-ilb-fe')]",
        "ilbBE" :"[concat(parameters('namePrefix'),'-ilb-be')]",
        "ilbFEConfigID1": "[concat(variables('ilbID'),'/frontendIPConfigurations/',variables('ilbFE'))]",
        "ilbBEAddressPoolID": "[concat(variables('ilbID'),'/backendAddressPools/',variables('ilbBE'))]",
        "ilbProbe1":"[concat('namePrefix','ilbp1')]",
        "ilbProbeID1" : "[concat(variables('ilbID'),'/probes/',variables('ilbProbe1'))]" ,
        "clusteripwithsubnetclass": "[concat(parameters('ClusterStaticIP'),'/',parameters('ClusterStaticIPSubnetClass'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('availabilitySetName')]",
            "sku": {
                "name": "Aligned"
            },
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "properties": {
              "platformFaultDomainCount": 3,
              "platformUpdateDomainCount": 5,
              "virtualMachines": []
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat(variables('vmNamePrefix'), copyIndex(1))]",
            "apiVersion": "2018-06-01",
            "location": "[parameters('location')]",
            "copy": {
              "name": "virtualMachineLoop",
              "count": "[parameters('vmCount')]"
            },
            "dependsOn": [
                "[concat(variables('vmNamePrefix'), copyIndex(1), '-nic')]","[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]"
            ],
            "properties": {
                "osProfile": {
                    "computerName": "[concat(variables('vmNamePrefix'),copyindex(1))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftSQLServer",
                        "offer": "SQL2016SP1-WS2016",
                        "sku": "Enterprise",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    },
                    "dataDisks": [
                        {
                            "createOption": "empty",
                            "lun": 0,
                            "diskSizeGB": "1023",
                            "caching": "ReadOnly",
                            "managedDisk": {
                                "storageAccountType": "StandardSSD_LRS"
                            }
                        }
                    ]
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(variables('vmNamePrefix'), copyindex(1), '-nic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true,
                        "storageUri": "[concat('https://', parameters('diagnosticsStorageAccountName'), '.blob.core.windows.net/')]"
                    }
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
                }
            },
            "identity": {
                "type": "systemAssigned"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(variables('vmNamePrefix'), copyIndex(1),'/DSC')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[parameters('location')]",
            "copy": {
                "name": "DSCLoop",
                "count": "[parameters('vmCount')]"
              },
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', variables('vmNamePrefix'), copyIndex(1))]"
            ],
            "properties": {
              "publisher": "Microsoft.Powershell",
              "type": "DSC",
              "typeHandlerVersion": "2.73",
              "autoUpgradeMinorVersion": true,
              "settings": {
                  "wmfversion" :"latest",
                  "configuration": {
                      "url": "https://raw.githubusercontent.com/aultt/ARM/master/AlwaysOnExistingVnet/dsc/Cluster.ps1.zip",
                      "script": "[if(equals(copyIndex(),0),'PrimarySQLNode.ps1','SecondSQLNode.ps1')]",
                      "function" : "AlwaysOnSQLServer"
                  },
                "configurationArguments": {
                    "domainName": "[parameters('domainName')]",
                    "ClusterName":"[concat(variables('vmnamePrefix'),'C')]",
                    "FirstNode":  "[concat(variables('vmNamePrefix'), '1')]",
                    "ClusterStaticIP": "[variables('clusteripwithsubnetclass')]",
                    "AvailabilityGroupName": "[parameters('availabilityGroupName')]",
                    "ListenerStaticIP": "[parameters('listenerStaticIP')]"
                    }
                },
              "protectedSettings": {
                "configurationArguments": {
                    "adminCreds": {
                    "userName": "[parameters('domainUsername')]",
                    "password": "[parameters('domainUserPassword')]"
                        },
                    "SQLServicecreds": {
                      "userName": "[parameters('sqlUsername')]",
                      "password": "[parameters('sqlUserPassword')]"
                       }   
                    }
                }      
            }
        },
        {
            "name": "[concat(variables('vmNamePrefix'), copyIndex(1), '-nic')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-04-01",
            "location": "[parameters('location')]",
            "copy":{
              "name": "nicloop",
              "count": "[parameters('vmCount')]"  
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('networkSecurityGroupName'))]","[variables('ilbID')]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "loadBalancerBackendAddressPools":[
                                {
                                    "id": "[variables('ilbBEAddressPoolID')]"
                                }
                            ],
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('AlwaysOnFCTesting', 'Microsoft.Network/networkSecurityGroups', parameters('networkSecurityGroupName'))]"
                }
            }
        },
        {
            "apiVersion": "2017-10-01",
            "name": "[variables('ilbName')]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "properties":{
                "frontendIPConfigurations":[
                    {
                    "name": "[variables('ilbFE')]",
                    "properties":{
                        "privateIPAllocationMethod": "Static",
                        "privateIPAddress": "[parameters('ClusterStaticIP')]",
                        "subnet":{
                            "id": "[variables('subnetRef')]"
                        }
                    }
                }
                ],
                "backendAddressPools": [
                    {
                        "name": "[variables('ilbBE')]"
                    }
                ],
                "loadBalancingRules":[
                    {
                        "name": "sql-1433",
                        "properties":{
                            "frontendIPConfiguration":{
                                "id": "[variables('ilbFEConfigID1')]"
                            },
                            "backendAddressPool": {
                                "id": "[variables('ilbBEAddressPoolID')]"
                            },
                            "probe":{
                                "id":"[variables('ilbProbeID1')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 1433,
                            "backendPort": 1433,
                            "enableFloatingIP": true
                        }
                    },
                    {
                        "name": "sql-445",
                        "properties":{
                            "frontendIPConfiguration":{
                                "id":"[variables('ilbFEConfigID1')]"
                            },
                            "backendAddressPool":{ 
                                "id": "[variables('ilbBEAddressPoolID')]"
                            },
                            "probe": {
                                "id": "[variables('ilbProbeID1')]"
                            },
                            "protocol": "Tcp",
                            "frontendPort": 445,
                            "backendPort": 445,
                            "enableFloatingIP": true
                        }
                    }
                ],
                "probes":[
                    {
                        "name": "[variables('ilbProbe1')]",
                        "properties": {
                                "protocol":"Tcp",
                                "port": 37000,
                                "intervalInSeconds": 5,
                                "numberOfProbes": 2
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('networkSecurityGroupName')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2018-08-01",
            "location": "[parameters('location')]",
            "properties": {
                "securityRules": []
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
    
}
